<h1 class="text-center mb-5">Products</h1>
<div class="products-container">
  <%= link_to ('<i class="fa fa-plus-square fa-3x pull-right add-product-button"></i> ').html_safe, new_product_path %>
  <div class="table-responsive text-center products-table ml-auto mr-auto">
    <table class="table table-striped">
      <thead>
        <tr class="thead-dark">
          <th scope="col">S.No</th>
          <th scope="col">Name</th>
          <th scope="col">Active</th>
          <th scope="col">Category</th>
          <th scope="col">Brand</th>
          <th scope="col">UOM</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% serial_number = 1 %>
        <% @products.each do |product| %>
          <tr>
            <th scope="row"><%= serial_number %></th>
            <td><%= product.name %></td>
            <td><%= product.active %></td>
            <td><%= product.category.name %></td>
            <td><%= product.brand.name %></td>
            <td><%= product.uom.name %></td>
            <td><%= link_to ('<i class="fa fa-edit fa-2x"></i>').html_safe, edit_product_path(product) %></td>
          </tr>
          <% serial_number += 1%>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
