<p>
  <fieldset>
    <%= f.collection_select(:product_id, Product.active_products, :id, :name, { required: true}) %>
    <%= f.number_field :quantity, placeholder: "Enter Quantity", required: true %>
    <%= f.number_field :rate, step: :any, placeholder: "Enter Rate", required: true %>
    <%= f.hidden_field :_destroy %>
    <%= link_to ('<i class="fa fa-trash"></i>').html_safe, "#", class: "remove_fields" %>
  </fieldset>
</p>