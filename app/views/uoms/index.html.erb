<h1 class="text-center mb-5">Uoms
  <%= link_to ('<i class="fa fa-plus-square pull-right add-uom-button"></i> ').html_safe, new_uom_path %>
</h1>
<table class="table table-striped uoms-table ml-auto mr-auto text-center">
  <thead>
    <tr class="thead-dark">
      <th scope="col">S.No</th>
      <th scope="col">Name</th>
      <th scope="col">Active</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% serial_number = 1 %>
    <% @uoms.each do |uom| %>
      <tr>
        <th scope="row"><%= serial_number %></th>
        <td><%= uom.name %></td>
        <td><%= uom.active %></</td>
        <td><%= link_to ('<i class="fa fa-edit fa-2x"></i>').html_safe, edit_uom_path(uom) %></td>
      </tr>
      <% serial_number += 1%>
    <% end %>
  </tbody>
</table>
