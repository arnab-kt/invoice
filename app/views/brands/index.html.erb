<h1 class="text-center mb-5">Brands</h1><br>
<%= link_to fa_icon "camera-retro", new_brand_path %><br>
  <div class="table-responsive text-center brands-table ml-auto mr-auto">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">S.No</th>
          <th scope="col">Name</th>
          <th scope="col">Active</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% serial_number = 1 %>
        <% @brands.each do |brand| %>
          <tr>
            <th scope="row"><%= serial_number %></th>
            <td><%= brand.name %></td>
            <td><%= brand.active %></</td>
            <td><%= link_to "Edit", edit_brand_path(brand) %></td>
          </tr>
          <% serial_number += 1%>
        <% end %>
      </tbody>
    </table>
  </div>